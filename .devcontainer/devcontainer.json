{
    "name": "R Development",
    "image": "rocker/r-ver:4.2.2",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "Ikuyadeu.r",
        "REditorSupport.r-lsp",
        "REditorSupport.vscode-r-debugger",
        "Ikuyadeu.r-pack",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens"
    ],
    "forwardPorts": [8787],
    "postCreateCommand": "R -e 'if (!requireNamespace(\"renv\", quietly = TRUE)) install.packages(\"renv\"); renv::restore(lockfile = \"renv.lock\")'",
    "remoteUser": "rstudio"
}
